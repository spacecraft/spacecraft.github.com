load 'deploy' if respond_to?(:namespace) # cap2 differentiator

default_run_options[:pty] = true

set :application, 'chchspace-site'
set :repository,  "git@github.com:spacecraft/site.git"

# Standard settings
set :user, 'deploy'
set :domain, 'metanation.com'
set :scm, 'git'
set :deploy_to, "/home/#{user}/#{application}"
set :deploy_via, :remote_cache
set :branch, 'master'
set :git_shallow_clone, 1
set :use_sudo, false

# Debuggery
# set :scm_verbose, true

server domain, :app, :web, :db

namespace :deploy do
  
  task :restart do
    run "touch #{release_path}/restart.txt"
  end
  
  task :start do
  end
  
  task :stop do
  end
  
  task :migrate do
    run "cd #{current_path} && rake db:migrate APP_ENV=production"
  end
  
  task :default do
    update
    transaction do
      migrate
    end
  end
  
end
