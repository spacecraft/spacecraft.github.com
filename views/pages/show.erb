<%= heading h(@page.title) %>

<% if @page.parent? %>
<a href="/<%= h @page.parent.permalink %>"><%= h @page.parent.title %></a> &raquo;
<% end %>

<%= RDiscount.new(@page.body).to_html %>

<% if logged_in? %>
  <p>
    <a href="/pages">All Pages</a>
    <a href="/pages/new">New Pages</a>
    <a href="/pages/<%= h @page.permalink %>/edit">Edit</a>
    <a href="/pages/<%= h @page.permalink %>" class="delete">Delete</a>
  </p>
<% end %>